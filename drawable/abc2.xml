<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shadow for button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Shadow color -->
            <corners android:radius="16dp" />  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Inner button color -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue" /> <!-- Set your desired button color here -->
            <corners android:radius="16dp" />  <!-- Rounded corners for the button -->
        </shape>
    </item>


</layer-list>