<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/peach_puff"
    tools:context=".Somnathtemple">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:text="Somnath Temple"
        android:textColor="@color/black" />

    <!-- ViewFlipper for Somnath Temple images -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:autoStart="true"
        android:flipInterval="3000"
        android:layout_gravity="center"
        android:padding="10dp">

        <!-- Image Slides -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath2"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath3"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath4"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath5"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/somnath6"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />
    </ViewFlipper>

    <!-- Spacer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <!-- LinearLayout with EditText and Button for image selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <EditText
            android:id="@+id/imageNumberInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Image number (1-6)"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/displayImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Image"
            android:textColor="@color/black"
            android:backgroundTint="@color/salmon"
            android:padding="10dp" />
    </LinearLayout>

    <!-- LinearLayout with ImageButtons for Contact and Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <!-- ImageButton for Contact -->
        <ImageButton
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/abc4"
            android:contentDescription="Contact"
            android:src="@drawable/c"
            android:elevation="8dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter" />

        <!-- ImageButton for Location -->
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/abc4"
            android:contentDescription="Location"
            android:src="@drawable/loca"
            android:elevation="8dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Scrollable text content for temple description -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/black"
            android:gravity="start" />
    </ScrollView>

</LinearLayout>
